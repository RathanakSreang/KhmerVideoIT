<div class="row video">
  <div class="col-md-3 screenshot">
    <%= image_tag video.image, class: "img-responsive" %>    
    <%= link_to "Read more", video_path(video), class: "btn btn-primary btn-read-video" %>
  </div>
  <div class="col-md-9 video-info">
    <h2><%= video.title %></h2>
    <span class="info">
      <%= video.created_at.to_date %>
      , duration:<%= video.duration %> minutes
    </span>
    <br>
    <%= video.description %>
  </div>
</div>
