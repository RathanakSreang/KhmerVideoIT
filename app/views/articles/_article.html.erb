<div class="row article">
  <div class="col-md-12">
    <h3><%= link_to article.title, article %></h3>
    <p>
      <span class="text-muted small">
        <em>
          <%= t("label.post_by") %> <%= (link_to article.user.name, article.user) if article.user %>
          <br/>
          <%= t("articles.label.post_at") %> <%= l article.created_at.localtime.to_date %>, <%= article.comments.size %> <%= t("articles.label.comment") %>
        </em>
      </span>
    </p>
    <p>
    <p class="acticle-info">
      <span class="text-muted small">
        <em>
          <%= t("articles.label.tag") %>
          <% article.tags.each do |tag| %>
            <%= link_to tag.name, tag %>
          <% end %>
        </em>
      </span>
    </p>    
      <p><%= article.description %></p>
      <%= link_to t("link.read_more"), article_path(article) %> 
    </p>
  </div>
</div>
