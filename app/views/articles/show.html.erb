<div class="row">
  <div class="col-md-12">
    <center><h3><u><%= @article.title.capitalize %></u></h3></center>
    <p>Tags:
      <% @article.tags.each do |tag| %>
        <%= link_to tag.name, tag %>
      <% end %>
      <br/>
      Post at: <%= l @article.created_at.localtime.to_date %>
    </p>
    <p><%#= @article.description %></p>    
    <%= sanitize @article.content %>
  </div>
  <div class="col-md-12">
    <br/>
    <%= render "comments/comments" %>
    <% if user_signed_in? %>
      <div id="reply_comment_form">
        <%= render "comments/form", comment_title: "Leave a comment as" %>  
      </div>
    <% else %>
        <%= link_to "Sign in", new_user_session_path  %>
        <%= " to post a comment" %>
    <% end %>
  </div>
  <div class="col-md-12">
    <div class="row well">
    Similar Article:
    <ul>
    <% @simlar_articles.each do |article| %>
      <li>
        <%= link_to article do %>          
          <p><%= article.title %></p>
        <% end %>
      </li>            
    <% end %>
    </ul>
    </div>
  </div>
</div>
