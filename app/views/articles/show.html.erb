<div class="row">
  <div class="col-md-12">
    <center><h3><u><%= @article.title.capitalize %></u></h3></center>
    <p>Language: <%= @article.language.name %></p>    
    <p><%#= @article.description %></p>    
    <%= sanitize @article.content %>
  </div>
  <div class="col-md-12">
    Comment
  </div>
  <br/>
  <div class="col-md-12">
    <div class="row well">
    Similar Article:
    <ul>
    <% @simlar_articles.each do |article| %>
      <li>
        <%= link_to article do %>          
          <p><%= article.title %></p>
        <% end %>
      </li>            
    <% end %>
    </ul>
    </div>
  </div>
</div>
