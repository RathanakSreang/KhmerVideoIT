<div class="row">
  <div class="col-md-12">
    <h3>All in tag's <%= @tag.name %>:</h3>
  </div>
  <div class="col-md-12">
    <% if @videos.any? %>
      <legend>Videos:</legend>
      <%= render @videos %>      
    <% end %>
  </div>
  <div class="col-md-12">
    <% if @articles.any? %>
      <legend>Articles:</legend>
      <%= render @articles %>      
    <% end %>
  </div>
</div>
