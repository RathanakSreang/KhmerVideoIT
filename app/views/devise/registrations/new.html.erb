<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 well">
        <legend><h2><%= t("devise.label.sign_up") %></h2></legend>

          <%= render "shared/socail_sign_in", show: true %>
          <hr/>          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
            
            <%= render "shared/error_message", object: f.object %>
            <div class="form-group">
              <%= f.label t("devise.label.name") %>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label t("devise.label.email") %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label t("devise.label.password") %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t("devise.label.password_lenth") %>)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label t("devise.label.password_confirmation") %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit t("devise.link.sign_up"), class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>
    </div>    
  </div>
</div>
