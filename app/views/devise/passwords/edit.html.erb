<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2><%= t("devise.label.change_pass") %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      
      <%= render "shared/error_message", object: f.object %>
      <%#= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t("devise.label.new_pass") %><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t("devise.label.password_lenth") %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t("devise.label.new_confirm_pass") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.link.change_pass"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
