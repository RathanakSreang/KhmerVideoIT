<br/>
<div class="col-md-12">  
  <% @comments.each do |comment| %>
    <div class="media">
      <a class="pull-left" href="#">    
        <%= image_tag comment.user.avatar, class: "img-round img-responsive user_profile" %>
      </a>
      <div class="media-body">
        <div class="comment-heading"><%= comment.user.name %>
        <%= t("users.label.comment_info") %>
        <%= link_to comment.commentable do %>
          <%= comment.commentable.title %>
        <% end %>
        <span class="text-muted small">
          <em>
            <%= time_ago_in_words comment.created_at %> <%= t("users.label.ago") %>
          </em>
        </span>
        </div>
        <div class="comment_content">
          <%= markdown comment.content %>
        </div>    
      </div>
    </div>
  <% end %>
  <%= will_paginate @comments %>
</div>
