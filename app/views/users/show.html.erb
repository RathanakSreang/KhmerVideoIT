<div class="row">
  <div class="col-md-4 col-md-offset-4 well">    
    <h2><b><%= @user.name %>'s Profile</b></h2>
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.avatar.url, calss: "img-round img-responsive user_profile" %>
      </div>
      <div class="col-md-9">
        <p>Email: <%= @user.email %></p>
        <% if @user == current_user %>
          <%= link_to "Edit", edit_user_registration_path %>
          | <%= link_to "Sign out", sign_out_path %>
        <% end %>
      </div>
    </div>    
  </div>
  <div class="col-md-12">
    <h3>Your activity:</h3>
    <% @comments.each do |comment| %>
      <div class="media">
        <a class="pull-left" href="#">    
          <%= image_tag @user.avatar, class: "img-round img-responsive user_profile" %>
        </a>
        <div class="media-body">
          <div class="comment-heading"><%= @user.name %>
          , comment on           
          <%= link_to comment.commentable do %>
            <%= comment.commentable.title %>
          <% end %>          
            <%= time_ago_in_words comment.created_at %> ago
          </div>
          <div class="comment_content">
            <%= markdown comment.content %>
          </div>    
        </div>
      </div>
    <% end %>
  </div>
</div>
