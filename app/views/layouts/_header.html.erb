<div class="logo">
   <div class="container">
      <div class="row">
         <div class="col-md-4">
            <!-- <img src="dddd"> -->
         </div>

         <div class="col-md-8">
            <div class="row">
              <div class="col-md-12">
                  <div class="pull-right">
                    <% unless user_signed_in? %> 
                     <%= link_to "Sign in ", new_user_session_path %>
                     OR
                     <%= link_to "Sign up here", new_user_registration_path %>
                    <% else %>
                      Log in as: <%= link_to current_user.email, user_path(current_user) %>
                      | <%= link_to "Sign out", sign_out_path %>
                    <% end %>
                  </div>
              </div>
              <div class="col-md-12 subscript">
                <ul class="">
                  <li>
                    <%= link_to Page.first.ff_link do %>
                      <i class="fa fa-facebook-square fa-2x"></i>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to Page.first.tw_link do %>
                      <i class="fa fa-twitter-square fa-2x"></i>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to Page.first.yt_link do %>
                      <i class="fa fa-youtube-square fa-2x"></i>
                    <% end %>
                  </li>
                </ul>                                                      
              </div>  
              </div>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="navbar navbar-inverse">
   <div class="container">
      <div class="navbar-header">
         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         </button>         
         <%= link_to "KH IT", root_path, class: "navbar-brand hidden-xs" %>
         <%= link_to "KH", root_path, class: "navbar-brand visible-xs" %>
         <%= form_tag(videos_path, :method => "get", class: "navbar-form pull-left", id: "search-form", role: "search") do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Video" %>
               <div class="input-group-btn">
                  <button type="submit" class="btn btn-default">
                     <i class="fa fa-search fa-lg"></i>
                  </button>
               </div>            
          </div>
        <% end %>         
      </div>
      <div class="navbar-collapse collapse">
         <ul class="nav navbar-nav navbar-right">
            <li class="<%= "active" if controller?("videos")&&action?("index") %>">
               <%= link_to "All Video", videos_path %>
            </li>            
            <li class="<%= "active" if controller?("articles")&&action?("index") %>">
               <%= link_to "Articles", articles_path %></li>
            <li class="<%= "active" if controller?("static_pages")&&action?("about") %>" >
               <%= link_to "About Us", about_path %>
            </li>
         </ul>
      </div>
      <!--/.navbar-collapse -->
   </div>
</div>
