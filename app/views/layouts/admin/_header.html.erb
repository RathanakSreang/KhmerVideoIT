<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collape-side-bar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collape-user">
            <span class="sr-only">Toggle navigation</span>
            <i class="fa fa-user"></i>
        </button>
        <%= link_to root_path do %>
          <span class="navbar-brand">KH IT</span>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="collape-user">
        <ul class="nav navbar-right user-nav">          
          <li class="pull-right">
            <%= link_to "Welcome! #{current_user.name}", "#", class:"dropdown-toggle", id:"admin-user-header", 
                      'aria-expanded' =>'false', data: {toggle: "dropdown"} %>
              <ul id="login-dp" class="dropdown-menu">    
                <li>
                  <%= link_to [:admin, current_user] do%>
                    <i class="fa fa-user"> </i>  Profile
                  <%end%>
                </li>                              
                <li class="divider"></li>
                <li><%= link_to sign_out_path do%>
                  <center><i class="fa fa-sign-out fa-lg"></i>  Sign Out</center>      
                <%end%>    
                </li>
                <br/>
              </ul>                
          </li>          
        </ul>
      </div> 
      <div class="collapse navbar-collapse" id="collape-side-bar">
          <ul class="nav navbar-nav side-nav">
              <li class="<%= "active" if controller?("admin/static_pages") && action?("dashboard") %>">
                <%= link_to admin_root_path do %>
                  <i class="fa fa-fw fa-dashboard"></i> Dashboard
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/languages") %>">
                <%= link_to admin_languages_path do %>
                  <i class="fa fa-language"></i> Languages
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/articles") %>">
                <%= link_to admin_articles_path do %>
                  <i class="fa fa-book"></i> Articles
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/tutorials") %>">
                <%= link_to admin_tutorials_path do %>
                  <i class="fa fa-book"></i> Tutorials
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/videos") %>">
                <%= link_to admin_videos_path do %>
                  <i class="fa fa-video-camera"></i> Videos
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/users") %>">
                <%= link_to admin_users_path do %>
                  <i class="fa fa-user"></i> Users
                <% end %>
              </li>
              <li class="<%= "active" if controller?("admin/static_pages") && !action?("dashboard") %>" >
                <%= link_to admin_about_path do %>
                  <i class="fa fa-info-circle"></i> About Page
                <% end %>
              </li>
          </ul>
      </div>
      <!-- /.navbar-collapse -->   
    </div>
  </div>
</header>
