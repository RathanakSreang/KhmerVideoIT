<%= form_for [:admin, @language] do |f| %>
  <%= render "shared/error_message", object: f.object %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit action, class: "btn btn-primary" %>
  </div>
<% end %>
