<center><h3><u>Turails</u></h3></center>
<%= link_to "Add new Turail", new_admin_tutorial_path %>
<div class="col-md-3 pull-right">
  <%= form_tag(admin_tutorials_path, :method => "get", class: "", id: "search-form", role: "search") do %>
  <div class="input-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Tutorial" %>
       <div class="input-group-btn">
          <button type="submit" class="btn btn-default">
             <i class="fa fa-search fa-lg"></i>
          </button>
       </div>            
  </div>
<% end %>
</div>
<table class="table">
  <thead>
    <th>Title</th>
    <th>Language</th>
    <th>Discription</th>    
    <th>Action</th>
  </thead>
  <tbody>
    <%= render @tutorials %>    
  </tbody>
</table>
<%= will_paginate @tutorials %>
