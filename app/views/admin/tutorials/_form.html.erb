<%= form_for [:admin, @tutorial] do |f| %>
  <%= render "shared/error_message", object: f.object %>
  
  <div class="form-group">
    <%= f.label :language %>
    <%= f.select(:language_id,options_from_collection_for_select(Language.all, "id", "name", (f.object.language.nil? ? 1 : f.object.language.id)),{},{class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 7, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit action, class: "btn btn-primary" %>
  </div>
<% end %>
