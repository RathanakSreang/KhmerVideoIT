<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <%= link_to t("link.back"), :back %>
    <center><h3><u><%= @tag.name %></u></h3></center>
    <span class="text-muted small">
      <em>
        <%= t("admin.tags.label.created_by") %> <%= (link_to @tag.user.name , [:admin, @tag.user]) if @tag.user %>
        <br/>
        <%= t("admin.tags.label.created_at") %> <%= l @tag.created_at.localtime %>
      </em>
    </span>
    <br/>
    <%= link_to t("link.edit"), edit_admin_tag_path(@tag), class: "btn btn-primary", "data-no-turbolink" => true %>
    <%= link_to t("link.delete"), admin_tag_path(@tag), data: {method: :delete, confirm: t("info.confirm_delete")}, class: "btn btn-danger" %>
  </div>
  <% if @articles.any? %>
    <div class="col-md-12">
      <legend><%= t("admin.articles.label.article") %></legend>
      <table class="table">
        <thead>
          <th><%= t("admin.articles.label.title") %></th>
          <th><%= t("admin.articles.label.tag_count") %></th>
          <th><%= t("admin.articles.label.description") %></th>
          <th><%= t("admin.articles.label.action") %></th>
        </thead>
        <tbody>
          <%= render @articles %>    
        </tbody>
      </table>
      <%= will_paginate @articles %>
    </div>
  <% end %>
  <% if @videos.any? %>
    <div class="col-md-12">
      <legend><%= t("admin.videos.label.video") %></legend>
      <table class="table">
        <thead>
          <th><%= t("admin.videos.label.title") %></th>
          <th><%= t("admin.videos.label.description") %></th>
          <th><%= t("admin.videos.label.tag_count") %></th>
          <th><%= t("admin.videos.label.duration") %></th>
          <th></th>
          <th><%= t("admin.videos.label.action") %></th>
        </thead>
        <tbody>
          <%= render @videos %>    
        </tbody>
      </table>
      <%= will_paginate @videos %>
    </div>
  <% end %>
</div>
