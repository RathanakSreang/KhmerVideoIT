<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <%= link_to "Back", :back %>
    <center><h3><u><%= @tag.name %></u></h3></center>
    Created at: <%= l @tag.created_at.localtime %>
    <br/>
    <%= link_to "edit", edit_admin_tag_path(@tag), class: "btn btn-primary", "data-no-turbolink" => true %>
    <%= link_to "delete", admin_tag_path(@tag), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger" %>
  </div>
  <div class="col-md-12">
    <legend>Articles</legend>
    <table class="table">
      <thead>
        <th>Title</th>
        <th>Tags count</th>
        <th>Description</th>
        <th>Action</th>
      </thead>
      <tbody>
        <%= render @articles %>    
      </tbody>
    </table>
    <%= will_paginate @articles %>
  </div>  
  <div class="col-md-12">
    <legend>Videos</legend>
    <table class="table">
      <thead>
        <th>Title</th>
        <th>Discription</th>
        <th>Tags count</th>
        <th>Duration</th>
        <th></th>
        <th>Action</th>
      </thead>
      <tbody>
        <%= render @videos %>    
      </tbody>
    </table>
    <%= will_paginate @videos %>
  </div>
</div>
