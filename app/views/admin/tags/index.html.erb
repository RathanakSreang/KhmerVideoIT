<div class="col-md-12 well">
  <legend><h3><%= t("admin.tags.label.tag") %></h3>
    <div class="col-md-3 pull-right">
      <%= form_tag admin_tags_path, method: "get", class: "", id: "search-form", role: "search" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t("admin.tags.label.search") %>
           <div class="input-group-btn">
              <button type="submit" class="btn btn-default">
                 <i class="fa fa-search fa-lg"></i>
              </button>
           </div>            
      </div>
    <% end %>
    </div>
  </legend>
  <%= link_to t("admin.tags.link.add_new_tag"), new_admin_tag_path %>
  <table class="table">
    <thead>
      <th><%= t("admin.tags.label.name") %></th>
      <th><%= t("admin.tags.label.created_at") %></th>
      <th><%= t("admin.tags.label.action") %></th>
    </thead>
    <tbody>
      <%= render @tags %>    
    </tbody>
  </table>
  <%= will_paginate @tags %>
</div>
