<div class="col-md-8 col-md-offset-2">
  <legend><h3><%= t("admin.comments.label.comment") %></h3>
    <div class="col-md-6 pull-right">
      <%= form_tag admin_comments_path, method: "get", class: "", id: "search-form", role: "search" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t("admin.comments.label.search") %>
           <div class="input-group-btn">
              <button type="submit" class="btn btn-default">
                 <i class="fa fa-search fa-lg"></i>
              </button>
           </div>            
      </div>
      <% end %>
    </div>
  </legend>
  <br/><br/>
  <%= render @comments %>
  <%= will_paginate @comments %>
</div>
