<% if comment %>
  <% if comment.parent_id.present? %>
    <%= t("admin.activities.comment.reply") %> <%= link_to t("admin.activities.comment.commented"), [:admin, comment] %>
    <%= t("admin.activities.comment.comment_on") %> <%= link_to comment.commentable.title, [:admin, comment.commentable] %>
  <% else %>
    <%= t("admin.activities.comment.post") %> <%= link_to t("admin.activities.comment.commented"), [:admin, comment] %>
    <%= t("admin.activities.comment.comment_on") %> <%= link_to comment.commentable.title, [:admin, comment.commentable] %>
  <% end %>  
<% else %>  
  <%= t("admin.activities.comment.remove_comment") %>
<% end %>
