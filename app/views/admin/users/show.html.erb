<div class="row">
  <div class="col-md-6 col-md-offset-3 well">    
    <legend><i class="fa fa-user "></i> User Profile</legend>
    <%= link_to "Back", :back %>
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.avatar.url, calss: "img-round img-responsive user_profile" %>
      </div>
      <div class="col-md-9">
        <p>Name: <%= @user.name %><br/>
          
            Email: <%= @user.email %><br/>
          
            Created: <%= @user.created_at %><br/>
          Role: <%= @user.role %>
        </p>
        <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-primary" %>
        <%= link_to "Delete", admin_user_path(@user), data: {method: :delete, confirm: "Are you sure?"} , class: "btn btn-danger" %>
      </div>
    </div>    
  </div>
</div>
