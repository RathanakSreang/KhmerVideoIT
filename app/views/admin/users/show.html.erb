<div class="row">
  <div class="col-md-6 col-md-offset-3 well">    
    <legend><i class="fa fa-user "></i> <%= t("admin.user.label.user_profile") %></legend>    
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.avatar.url, calss: "img-round img-responsive user_profile" %>
        <br/>
        <%= link_to :back do %>
          <i class="fa fa-arrow-left"></i> <%= t("link.back") %>
        <% end %>
      </div>
      <div class="col-md-9">        
        <p><%= t("admin.user.label.name") %> <%= @user.name %><br/>                      
          <% unless @user.provider.present? %>
            <%= t("users.label.email") %> <%= @user.email %>
          <% else %>          
            <%= link_to @user.url do %>
              <i class="fa fa-<%= @user.provider %>-square fa-3x"></i>  
            <% end %>          
          <% end %>
            <br/>
          <span class="text-muted small">
            <em>
              <%= t("admin.user.label.created_at") %> <%= l @user.created_at.localtime %><br/>
            </em>
          </span>
          <%= t("admin.user.label.role") %> <%= @user.role %>
        </p>
        <% if current_user.super? || @user.normal? || @user == current_user %>    
          <%= link_to edit_admin_user_path(@user), class: "btn btn-primary" do %>
            <i class="fa fa-pencil-square-o"></i> <%= t("link.edit") %>
          <% end %>
          <%= link_to admin_user_path(@user), data: {method: :delete, confirm: t("info.confirm_delete")} , class: "btn btn-danger" do %>
            <i class="fa fa-trash-o"></i> <%= t("link.delete") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
