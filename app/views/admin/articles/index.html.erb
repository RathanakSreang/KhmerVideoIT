<center><h3><u>Articles</u></h3></center>
<%= link_to "Add new Article", new_admin_article_path, "data-no-turbolink" => true %>
<div class="col-md-3 pull-right">
  <%= form_tag(admin_articles_path, :method => "get", class: "", id: "search-form", role: "search") do %>
  <div class="input-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Article" %>
       <div class="input-group-btn">
          <button type="submit" class="btn btn-default">
             <i class="fa fa-search fa-lg"></i>
          </button>
       </div>            
  </div>
<% end %>
</div>
<table class="table">
  <thead>
    <th>Title</th>
    <th>Tags count</th>
    <th>Description</th>
    <th>Action</th>
  </thead>
  <tbody>
    <%= render @articles %>    
  </tbody>
</table>
<%= will_paginate @articles %>
