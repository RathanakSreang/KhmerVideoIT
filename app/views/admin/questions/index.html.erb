<div class="col-md-12 well">  
  <legend><h3><%= t("admin.questions.label.question") %></h3>
    <div class="col-md-3 pull-right">
      <%= form_tag(admin_questions_path, method: "get", class: "", id: "search-form", role: "search") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t("admin.videos.label.search") %>
           <div class="input-group-btn">
              <button type="submit" class="btn btn-default">
                 <i class="fa fa-search fa-lg"></i>
              </button>
           </div>            
      </div>
    <% end %>
    </div>
  </legend>
  <table class="table">
    <thead>
      <th><%= t("admin.questions.label.title") %></th>
      <th><%= t("admin.questions.label.ask_by") %></th>
      <th><%= t("admin.videos.label.tag_count") %></th>      
      <th><%= t("admin.videos.label.action") %></th>
    </thead>
    <tbody>
      <%= render @questions %>    
    </tbody>
  </table>
  <%= will_paginate @questions %>
</div>
