<%= form_for [:admin, @question], validate: true do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="form-group">    
    <%= f.text_field :title, class: "form-control", placeholder: Question.human_attribute_name(:title) %>
  </div>

  <div class="form-group">    
    <%= f.text_area :content, rows:15, class: "form-control", placeholder: Question.human_attribute_name(:content) %>
  </div>

  <div class="form-group">
    <%= f.label t("admin.articles.label.tag") %>
    <%= f.collection_select :tag_ids, Tag.with_translations.order(:name), "id", "name",{},{multiple: true, size: 5, class: "form-control tags_choosen"} %>
  </div>
  <div class="action">
    <%= f.submit action, class: "btn btn-primary" %>
  </div>
<% end %>
