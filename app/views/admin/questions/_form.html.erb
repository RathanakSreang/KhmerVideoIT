<%= form_for [:admin, @question] do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows:15, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag %>
    <%= f.select(:tag_ids,options_from_collection_for_select(Tag.all, "id", "name", f.object.tag_ids),{},{multiple: true, size: 5, class: "form-control"}) %>
  </div>

  <div class="action">
    <%= f.submit action, class: "btn btn-primary" %>
  </div>
<% end %>
